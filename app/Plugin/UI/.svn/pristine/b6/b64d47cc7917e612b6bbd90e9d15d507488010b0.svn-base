.notifier, .notifier div { padding: 0; margin: 0; }
.notifier {
	float: left;
	position: relative;
	height: 42px;
	margin-right:20px;
}
.notifier .icon {
	position: relative;
}
.notifier .icon .counter {
	position: absolute; text-align: center; font-size: 7px; background-color: #fff; color: #000; padding: 0px 2px; height: 10px; border-color: #000; font-weight: bold;
}

.notifier .icon .counter.notices {
	top: 0; left: 0;
}

.notifier .icon .counter.warnings {
	top: 0; right: 0;
}

.notifier .icon .counter.alerts {
	bottom: 0; right: 0;
}